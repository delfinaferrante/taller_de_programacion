programa Ej5
procesos
  proceso juntarFlores
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
  fin
  proceso depositarFlores
  comenzar
    mientras(HayFlorEnLaBolsa)
      depositarFlor
  fin
  proceso recorridoImpar (E cant:numero; E av:numero; ES calle:numero)
  comenzar
    repetir cant
      juntarFlores
      mover
    si(HayFlorEnLaEsquina)
      tomarFlor
    depositarFlores
    Pos(av, calle+5)
  fin
  proceso depositarPapeles(E av:numero; E calle:numero)
  comenzar
    Pos(av,calle)
    mientras(HayPapelEnLaBolsa)
      depositarPapel
  fin
  proceso juntarPapeles
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
  fin
  proceso recorridoPar (E cant:numero; E av:numero; ES calle:numero)
  comenzar
    repetir cant
      juntarPapeles
      mover
    si(HayPapelEnLaEsquina)
      juntarPapeles
    depositarPapeles(av,calle)
    Pos(av+5, calle)
  fin
areas
  area1: AreaP (1, 75, 16, 80)
  area2: AreaP (75, 80, 80, 100)
  area3: AreaP (70, 10, 100, 15)
  area4: AreaP (10, 1, 15, 11) 
robots
  robot tipo1
  variables
    av,calle:numero  
  comenzar
    av:= PosAv
    calle:= PosCa
    derecha
    repetir 2
      si (av = 1)
        recorridoImpar(15, av, calle)
      sino
        recorridoImpar(29,av,calle)
  fin
  robot tipo2
  variables
    av,calle:numero
  comenzar
    av:= PosAv
    calle:= PosCa
    repetir 2
      si (calle = 1)
        recorridoPar(10,av,calle)
      sino
        recorridoPar(20,av,calle)
  fin
variables
  robot1, robot3: tipo1
  robot2, robot4: tipo2
comenzar
  AsignarArea(robot1, area1)
  AsignarArea(robot2, area2)
  AsignarArea(robot3, area3)
  AsignarArea(robot4, area4)
  Iniciar(robot1, 1, 75)
  Iniciar(robot2, 75, 80)
  Iniciar(robot3, 70, 10)
  Iniciar(robot4, 10, 1)
fin