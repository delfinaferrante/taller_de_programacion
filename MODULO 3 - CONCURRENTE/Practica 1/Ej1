programa Ej1
procesos
  proceso juntarFlores(ES flores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores+1
  fin
  proceso depositarFlores(E flores:numero)
  comenzar
    repetir flores
      depositarFlor
  fin
  proceso recorrerAvenida(E numAv: numero)
  variables
    flores, esquinasSin:numero
  comenzar
    flores:= 0
    esquinasSin:= 0    
    repetir 99
      si ~(HayFlorEnLaEsquina)
        esquinasSin:= esquinasSin+1
        mover
      sino
        juntarFlores(flores) 
        mover
    si ~(HayFlorEnLaEsquina)
      esquinasSin:= esquinasSin+1
    sino
      juntarFlores(flores) 
    depositarFlores(flores)
    Informar(flores)
    Informar(esquinasSin)  
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot tipo1
  variables
    cantFlores, esquinasSinFlores: numero
  comenzar
    recorrerAvenida(1)
  fin
variables
  robot1: tipo1
comenzar
  AsignarArea(robot1, ciudad)
  Iniciar(robot1, 1,1)
fin