programa Ej3B
procesos
  proceso juntarPapeles(ES cantpapeles:numero; E valor:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)&(cantpapeles <> valor)
      tomarPapel
      cantpapeles:= cantpapeles + 1
  fin
areas
  area1: AreaP (1,1,1,100)
  area2: AreaP (2,1,2,100)
  area3: AreaP (3,1,3,100)
  areaJefe: AreaP (4,1,4,1)
robots
  robot recolectores
  variables
    cantPapeles,id,valor:numero
    aux1,aux2,msj:boolean
  comenzar
    RecibirMensaje(id,rjefe)
    Random(valor,1,5)
    Informar(valor)
    aux1:= V
    aux2:= V
    mientras(PosCa < 100)&(aux1)&(aux2)
      cantPapeles:= 0
      juntarPapeles(cantPapeles,valor)
      
      mientras(cantPapeles <> valor)&(PosCa < 100)
        mover
        juntarPapeles(cantPapeles,valor)
      
      si(PosCa = 100)
        msj:= F 
      sino
        msj:= V
        
      si(id = 1)
        EnviarMensaje(msj,r2)
        EnviarMensaje(msj,r3)
        RecibirMensaje(aux1,*)
        RecibirMensaje(aux2,*)
      sino
        si(id = 2)
          EnviarMensaje(msj,r1)
          EnviarMensaje(msj,r3)
          RecibirMensaje(aux1,*)
          RecibirMensaje(aux2,*)
        sino
          EnviarMensaje(msj,r1)
          EnviarMensaje(msj,r2)
          RecibirMensaje(aux1,*)
          RecibirMensaje(aux2,*)
  fin
  robot jefe
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
variables
  r1,r2,r3: recolectores
  rjefe: jefe
comenzar
  AsignarArea(r1, area1)
  AsignarArea(r2, area2)
  AsignarArea(r3, area3)
  AsignarArea(rjefe, areaJefe)  
  Iniciar(r1, 1,1)
  Iniciar(r2, 2,1)
  Iniciar(r3, 3,1)
  Iniciar(rjefe, 4,1)
fin