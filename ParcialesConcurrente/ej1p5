programa P5Ej1
procesos
  proceso juntarPapeles(ES papeles:numero)
  comenzar
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:= papeles + 1
  fin
  proceso juntarFlores(ES flores:numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:= flores + 1
  fin
areas
  areaEquipoAzul: AreaPC (1,98,100,99)
  areaEquipoRojo: AreaPC (2,1,3,100)
  areaJ: AreaP(10,10,10,10)
robots
  robot equipoAzul
  variables
    papeles,id:numero
  comenzar
    RecibirMensaje(id, jefe)
    papeles:= 0
    derecha
    mientras(PosAv < 100)
      juntarPapeles(papeles)
      mover
    EnviarMensaje(id, jefe)
    EnviarMensaje(papeles, jefe)
  fin
  robot equipoRojo
  variables
    flores,id:numero
  comenzar
    RecibirMensaje(id,jefe)
    flores:= 0
    mientras(PosCa < 100)
      juntarFlores(flores)
      mover
    EnviarMensaje(id, jefe)
    EnviarMensaje(flores, jefe)
  fin
  robot fiscalizador
  variables
    id, flores, papeles, aux: numero
  comenzar
    EnviarMensaje(1, a1)
    EnviarMensaje(2, a2)
    EnviarMensaje(3, r1)
    EnviarMensaje(4, r2)
    flores:= 0
    papeles:= 0
    repetir 4
      RecibirMensaje(id, *)
      aux:= 0
      si(id = 1)
        RecibirMensaje(aux, a1) 
        papeles:= papeles + aux
      sino
        si(id = 2)
          RecibirMensaje(aux, a2)
          papeles:= papeles + aux
        sino
          si(id = 3)
            RecibirMensaje(aux, r1)
            flores:= flores + aux
          sino
            RecibirMensaje(aux, r2)
            flores:= flores + aux
    si(flores > papeles)
      Informar('equipo',2)
    sino
      Informar('equipo',1)
  fin
variables
  a1,a2: equipoAzul
  r1,r2: equipoRojo
  jefe: fiscalizador
comenzar
  AsignarArea(a1, areaEquipoAzul)
  AsignarArea(a2, areaEquipoAzul)
  AsignarArea(r1, areaEquipoRojo)
  AsignarArea(r2, areaEquipoRojo)
  AsignarArea(jefe, areaJ)
  Iniciar(a1, 1, 98)
  Iniciar(a2, 1, 99)
  Iniciar(r1, 2, 1)
  Iniciar(r2, 3, 1)
  Iniciar(jefe, 10,10)
fin